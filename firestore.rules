rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: caller is admin or employee
    function isAdminOrEmployee() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["admin", "employee"];
    }

    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // ── Users ──────────────────────────────────────────────────────────────
    match /users/{userId} {
      // Any authenticated user can read any profile
      allow read: if request.auth != null;

      // Users write their own doc; admin/employee can write any doc
      allow write: if (request.auth != null && request.auth.uid == userId) ||
                      isAdminOrEmployee();

      // Anyone authenticated can update just rating/reviewCount
      allow update: if request.auth != null &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['rating', 'reviewCount']);
    }

    // ── Jobs ───────────────────────────────────────────────────────────────
    match /jobs/{jobId} {
      allow read:   if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if isAdmin();
    }

    // ── Chats ──────────────────────────────────────────────────────────────
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }

    // ── Messages ───────────────────────────────────────────────────────────
    match /messages/{messageId} {
      allow read:   if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // ── Reviews ────────────────────────────────────────────────────────────
    match /reviews/{reviewId} {
      allow read:   if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.reviewerId ||
         request.auth.uid == resource.data.clientId  ||
         request.auth.uid == resource.data.operatorId ||
         isAdminOrEmployee());
      allow delete: if request.auth != null &&
        (request.auth.uid == resource.data.reviewerId ||
         request.auth.uid == resource.data.clientId  ||
         request.auth.uid == resource.data.operatorId ||
         isAdminOrEmployee());
    }

    // ── Transactions ───────────────────────────────────────────────────────
    match /transactions/{transactionId} {
      allow read:   if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if isAdmin();
    }

    // ── Claims ─────────────────────────────────────────────────────────────
    match /claims/{claimId} {
      allow read:   if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.claimantId || isAdminOrEmployee());
      allow delete: if isAdmin();
    }

    // ── Support Chats ──────────────────────────────────────────────────────
    match /supportChats/{chatId} {
      allow read, write: if request.auth != null &&
        (chatId == ('support_' + request.auth.uid) || isAdminOrEmployee());

      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    // ── Admin Notifications (new signups, page visits) ─────────────────────
    // Any visitor (including unauthenticated) can create; only admin/employee can read.
    match /adminNotifications/{notifId} {
      allow create: if true;
      allow read, update: if isAdminOrEmployee();
      allow delete: if isAdmin();
    }

    // ── User Notifications (approval / rejection notices) ──────────────────
    match /notifications/{notifId} {
      // Users can read & update their own notifications; admin can read/write all
      allow read, update: if request.auth != null &&
        (request.auth.uid == resource.data.uid || isAdminOrEmployee());
      allow create: if request.auth != null && isAdminOrEmployee();
      allow delete: if isAdmin();
    }

    // ── Site Visits ────────────────────────────────────────────────────────
    match /siteVisits/{visitId} {
      allow create: if true;
      allow read:   if isAdminOrEmployee();
      allow delete: if isAdmin();
    }
  }
}
